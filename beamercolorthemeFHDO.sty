\mode<presentation>

% Color definitions
\definecolor{FHDOorange}{RGB}{245,85,0}
\definecolor{FHDOorange2}{HTML}{FF8443}
\definecolor{FHDOgrey1}{RGB}{204,204,204}
\definecolor{FHDOgrey2}{RGB}{15,153,153}
\definecolor{FHDOgrey3}{RGB}{102,102,102}
\definecolor{FHDOgrey4}{RGB}{85,85,85}
\definecolor{FHDOgrey5}{RGB}{51,51,51}


% Settings
\setbeamercolor*{title}{fg=white}
\setbeamercolor*{subtitle}{fg=FHDOgrey4}
\setbeamercolor*{frame}{fg=FHDOgrey4}
\setbeamercolor*{author}{fg=FHDOgrey5}
\setbeamercolor*{date}{fg=FHDOgrey5}
\setbeamercolor*{frametitle}{fg=FHDOorange}
\setbeamercolor{alerted text}{fg=FHDOorange}
\setbeamercolor{author in head/foot}{fg=FHDOgrey5, bg=FHDOorange}
\setbeamercolor{progress bar in head/foot}{fg=FHDOorange}
\setbeamercolor{itemize item}{fg=FHDOorange}
\setbeamercolor{itemize subitem}{fg=FHDOorange}
\setbeamercolor{itemize subsubitem}{fg=FHDOorange}
\setbeamercolor{normal text}{fg=black}

\setbeamercolor{enumerate item}{fg=FHDOorange}
\setbeamercolor{enumerate subitem}{fg=FHDOorange}
\setbeamercolor{enumerate subsubitem}{fg=FHDOorange}

\setbeamercolor{section in toc}{fg=FHDOgrey5}
\setbeamercolor{subsection in toc}{fg=FHDOgrey5}

\setbeamercolor{frametitle exercise}{bg=FHDOorange, fg=FHDOgrey4}

\setbeamercolor{bibliography item}{fg=FHDOorange}
\setbeamercolor{bibliography entry author}{fg=FHDOgrey5}
\setbeamercolor{bibliography entry title}{fg=FHDOorange}
\setbeamercolor{bibliography entry location}{fg=FHDOgrey5}
\setbeamercolor{bibliography entry note}{fg=FHDOgrey5}


\mode
<all>
