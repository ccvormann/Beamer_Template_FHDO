\mode<presentation>

% Format the Frame title / headline of each frame
\defbeamertemplate*{frametitle}{texsx}[1][]
{
  \begin{tikzpicture}
   \useasboundingbox[](0,0) rectangle(\the\paperwidth,2);%
            {\node[anchor= north west] at (-0.2,1.5){\usebeamerfont{section in title}\usebeamercolor[fg]{subtitle}\insertsection};%
            \node[anchor= north west, text width=9.5cm] at (-0.2,1.1) {\usebeamerfont{frametitle}\usebeamercolor[fg]{frametitle}\baselineskip=1pt\insertframetitle\par};}%
    \end{tikzpicture}
    \vspace*{-0.8cm} % Added this to move the content upwards
}

% Footline for each frame except title page

\newcommand{\Ffootline}{%                       %%defines a new command called \Ffootline
    \insertshortauthor                          %%puts the author's name  in the left corner
    \hfill
    \inserttitle \hspace{0.25em} (\insertdate)  %%puts the presentation's title and the date in the middle
    \hfill
    \insertframenumber}                         %%includes the current slide number in the right corner


\setbeamertemplate{footline}{%                  %%sets the options for the footline
 \ifnum 
      \insertpagenumber=1                       %% Not Footline on the Title Page
      \leavevmode%
      \hbox{%
      \begin{beamercolorbox}[wd=\paperwidth,ht=2.25ex,dp=1ex,center]{}% % empty environment to raise height
      \end{beamercolorbox}}%
      \vskip0pt%
  \else
      \usebeamercolor{author}                   %% sets the color to FHDOgrey4 as defined for author
      \hspace*{4mm} \Ffootline \hspace{6mm}     %% includes the content of the \Ffootline, leaving a margin of 4mm to the right and left of the content.
      \vspace*{3mm}                             %% leaves a margin of 3mm to the bottom of the page
  \fi
 }

\mode<all>



